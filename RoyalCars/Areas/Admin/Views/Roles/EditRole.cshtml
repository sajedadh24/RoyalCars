@model RoyalCars.Models.ViewData.EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>EditRole</h1>

<h4>EditRoleViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId" readonly class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="card-footer">
                <a asp-action="EditUserInRole" asp-controller="Roles" asp-route-roleid="@Model.RoleId" class="btn btn-danger" style="width:auto">Add or Role User</a>

            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-primary">Back to Dashboard</a>
</div>

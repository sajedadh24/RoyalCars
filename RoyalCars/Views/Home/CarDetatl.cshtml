
@model RoyalCars.Models.ViewData.RoyalViewModel
@{
    ViewData["Title"] = "CarDetatl";
}

<!-- Page Header Start -->
<div class="container-fluid page-header">
    <h1 class="display-3 text-uppercase text-white mb-3">Car Detail</h1>
    <div class="d-inline-flex text-white">
        <h6 class="text-uppercase m-0"><a class="text-white" asp-action="Index" asp-controller="Home">Home</a></h6>
        <h6 class="text-body m-0 px-3">/</h6>
        <h6 class="text-uppercase text-body m-0">Car Detail</h6>
    </div>
</div>
<!-- Page Header Start -->
<!-- Detail Start -->
<div class="container-fluid pt-5">
    <div class="container pt-5 pb-3">
        @Html.HiddenFor(x => x.Cars)

        <h1 class="display-4 text-uppercase mb-5">@Model.MyCar.CarName</h1>
        <h1 class="display-4 text-uppercase mb-5">@Model.MyCar.Company.CompanyName</h1>
        <div class="row align-items-center pb-2">
            <div class="col-lg-6 mb-4">
                <img class="img-fluid" src="@Url.Content(Model.MyCar.Img)" alt="">
            </div>
            <div class="col-lg-6 mb-4">
                <h4 class="mb-2">@Model.MyCar.ReserveCost</h4>
                <div class="d-flex mb-3">
                    <h6 class="mr-2">Rating:</h6>
                    <div class="d-flex align-items-center justify-content-center mb-1">
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star text-primary mr-1"></small>
                        <small class="fa fa-star-half-alt text-primary mr-1"></small>

                    </div>
                </div>
                <p>
                    @Model.MyCar.CarDescribe
                </p>

                <div class="d-flex pt-1">
                    <h6>Share on:</h6>
                    <div class="d-inline-flex">
                        <a class="px-2" href=""><i class="fab fa-facebook-f"></i></a>
                        <a class="px-2" href=""><i class="fab fa-twitter"></i></a>
                        <a class="px-2" href=""><i class="fab fa-linkedin-in"></i></a>
                        <a class="px-2" href=""><i class="fab fa-pinterest"></i></a>
                    </div>
                </div>
            </div>

        </div>
        <div class="row mt-n3 mt-lg-0 pb-4">
            <div class="col-md-3 col-6 mb-2">
                <i class="fa fa-car text-primary mr-2"></i>
                <span>@Model.MyCar.CarModel</span>
            </div>
            <div class="col-md-3 col-6 mb-2">
                <i class="fa fa-cogs text-primary mr-2"></i>
                <span>@Model.MyCar.CarTyp</span>
            </div>
            <div class="col-md-3 col-6 mb-2">
                <i class="fa fa-road text-primary mr-2"></i>
                <span>@Model.MyCar.CarDistance</span>
            </div>
            <div class="col-md-3 col-6 mb-2">
                <i class="fa fa-eye text-primary mr-2"></i>
                <span>@Model.MyCar.OtherPerties</span>
            </div>
            @if (Model.MyCar.IsActive == false)
            {
                <a asp-action="CarBooking" asp-controller="Home"  class="btn btn-primary btn-block">Check Now</a>
            }
            else
            {
                <a asp-action="Index" asp-controller="Home">Rente</a>
            }
        </div>

    </div>
</div>

<!-- Detail End -->

@await Component.InvokeAsync("CompanyAd")
@await Component.InvokeAsync("Company")
